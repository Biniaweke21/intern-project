generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  role      Role     @default(HMR)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Employee {
  id          String          @id @default(cuid())
  firstName   String
  lastName    String
  country     String
  city        String
  phone       String
  email       String          @unique
  jobDetailId String?
  JobDetail   EmployeeDetail? @relation(fields: [jobDetailId], references: [id])
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
}

model EmployeeDetail {
  id              String     @id @default(cuid())
  position        String
  department      String
  baseSalary      Float
  salaryFrequency Float
  dateOfHire      DateTime
  employeeId      String     @unique
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  Employee        Employee[]
}

enum Role {
  HMR
  ADMIN
}
